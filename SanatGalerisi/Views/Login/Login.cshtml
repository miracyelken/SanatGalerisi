@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="styles.css">
</head>
<style>
    .bodyad {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        width: 300px;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
    }

    .h2ad {
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .labelad {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .inputad[type="text"],
    .inputad[type="password"] {
        width: calc(100% - 22px); /* Kenar boşluklar için hesaplanan genişlik */
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box; /* Kutunun genişliğini iç kenar boşlukları dahil olarak hesaplar */
    }

    .butttonad[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #d0dd1b;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .butttonad[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>
<body class="bodyad" style="background-color: rgb(33, 187, 192);">
    <div style="padding: 100px 60px; background-color: rgba(255, 255, 255, 0.9);">
        <h2 class="h2ad">HOŞGELDİNİZ</h2>
        <button class="butttonad" onclick="myFunction()">Geri Dön</button>
    </div>
    <br />
    <br />
    <div class="login-container">
        <h2 class="h2ad">Admin Panel</h2>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <label class="labelad" for="KullaniciAdi">Kullanıcı Adı:</label>
                <input class="inputad" type="text" id="KullaniciAdi" name="KullaniciAdi" placeholder="Kullanıcı Adınızı Giriniz" required>
            </div>
            <div class="form-group">
                <label class="labelad" for="Sifre">Şifre:</label>
                <input class="inputad" type="password" id="Sifre" name="Sifre" placeholder="Şifrenizi Giriniz" required>
            </div>
            <button class="butttonad" type="submit">Login</button>
        }
    </div>
    <script>
        function myFunction() {
            if (confirm("Ana Sayfaya Dönülsün mü?")) {
                window.location.href = "/Home/Index/"; // Kullanıcı OK'e tıklarsa sayfa1.html'e yönlendir
            } else {
                window.location.href = "/Login/Login"; // Kullanıcı Cancel'e tıklarsa sayfa2.html'e yönlendir
            }
        }
    </script>
</body>
</html>



